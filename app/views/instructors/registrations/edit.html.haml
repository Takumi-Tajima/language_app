= simple_form_for(current_instructor, url: instructor_registration_path, html: { method: :put }) do |f|
  = f.input :email
  = f.input :current_password
  = f.input :password, label: '新しいパスワード', hint: '変更しない場合は空欄のまま'
  = f.input :password_confirmation, label: '新しいパスワード確認'
  = f.button :submit, class: 'btn-primary'
